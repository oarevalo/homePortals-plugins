<?xml version="1.0" encoding="UTF-8"?>
<resLib type="module">
    
        <!-- ********   button  ************ -->
        <resource access="general" id="button" name="ui/button">
            <description>
                Displays a button
            </description>
            <attributes>
                <attribute name="label" description="Text on the button" default="Click Me" />
                <attribute name="onClick" description="action to execute when clicking the button" default="" />
            </attributes>
            <moduleInfo>
                <authorName>Oscar Arevalo</authorName>
                <authorEmail>oarevalo@gmail.com</authorEmail>
                <authorURL>http://www.homeportals.com</authorURL>
                <screenshot/>
            </moduleInfo>
			<api>
				<methods />
				<events>
					<event name="onClick" description="Raised whenever the button is clicked" />
				</events>
			</api>
        </resource>	

       <!-- ********   image  ************ -->
        <resource access="general" id="image" name="ui/image">
            <description>
                Displays an image
            </description>
            <attributes>
                <attribute name="href" description="If not empty, a URL to go to when clicking on the image" default="" />
                <attribute name="src" description="Image source" default="" />
                <attribute name="label" description="Alternate text for the image" default="" />
            </attributes>
            <moduleInfo>
                <authorName>Oscar Arevalo</authorName>
                <authorEmail>oarevalo@gmail.com</authorEmail>
                <authorURL>http://www.homeportals.com</authorURL>
                <screenshot/>
            </moduleInfo>
			<api>
				<methods />
				<events>
					<event name="onClick" description="Raised whenever the image is clicked" />
				</events>
			</api>
        </resource>	
        
 		<!-- ********   Panel  ************ -->
		<resource access="general" id="panel" name="">
			<description>
