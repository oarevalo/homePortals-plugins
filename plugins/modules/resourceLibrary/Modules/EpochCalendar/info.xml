<?xml version="1.0" encoding="UTF-8"?>
<resLib type="module">


	
	<!-- ********   Epoch Calendar  ************ -->
	<resource access="general" id="calendar" name="EpochCalendar/calendar">
		<description>
			Displays a calendar
		</description>
		<moduleInfo>
			<authorName>Oscar Arevalo</authorName>
			<authorEmail>oarevalo@gmail.com</authorEmail>
			<authorURL>http://www.homeportals.com</authorURL>
			<screenshot/>
		</moduleInfo>
		<eventListeners>
			<event eventHandler="$ID$.initCalendar" eventName="onPageLoaded" objectName="Framework"/>
		</eventListeners>		
		<api>
			<methods>
				<method description="Initializes the calendar." name="initCalendar"/> 
			</methods>
			<events>
				<event description="This event is raised when someone clicks on a date. The argument passed is the selected date." name="onSelectDate"/>
			</events>
		</api>
	</resource>
	

</resLib>
